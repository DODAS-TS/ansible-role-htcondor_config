{
  "id": "condorwn",
  "cpus": {{htcondor_docker_cpu_x_wn}},
  "mem": {{htcondor_docker_ram_x_wn}},
  "instances": {{htcondor_initial_number_of_slaves}},
  "container": {
    "type": "DOCKER",
    "docker": {
      "image": "{{htcondor_config_condor_image}}",
      "forcePullImage": true,
      "privileged": true,
      "network": "BRIDGE"
    },
    "volumes": [
      { "containerPath": "/etc/condor/condormapfile",
        "hostPath": "/tmp/condormapfile",
        "mode": "RW"
      }
    ]
  },
  "healthChecks": [
    {
      "command": {
        "value": "dodas_check_condor_processes condor_startd && dodas_check_condor_master_ip"
      },
      "protocol": "COMMAND",
      "gracePeriodSeconds": 300,
      "intervalSeconds": 60,
      "timeoutSeconds": 20,
      "maxConsecutiveFailures": 3,
      "delaySeconds": 15
    }
  ],
  "env": {
    "CONDOR_HOST": "{{ condor_host }}",
    "SLOT_TYPE_1": "cpus={{htcondor_cpu_x_wn}}, mem={{htcondor_ram_x_wn}}",
    "ZOOKEEPER_HOST_LIST": "{{ zookeeper_peers }}",
    "CCB_ADDRESS": "{{ ccb_address }}",
    "PROXY_CACHE": "{{ proxycache_host }}:8080"
  },
  "args": [
    "wn"
  ],
  "constraints": [
    ["hostname", "UNLIKE", "{{htcondor_config_schedd_ip}}"],
    ["hostname", "UNLIKE", "{{htcondor_config_ccb_ip}}"]
  ]
}
